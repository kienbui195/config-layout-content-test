{
  "collectionName": "components_init_text_options",
  "info": {
    "displayName": "Text Option",
    "description": ""
  },
  "options": {},
  "attributes": {
    "font_size": {
      "type": "integer",
      "min": 0,
      "default": 14
    },
    "font_weight": {
      "type": "enumeration",
      "enum": [
        "thin",
        "regular",
        "medium",
        "bold"
      ],
      "default": "regular"
    },
    "font_style": {
      "type": "enumeration",
      "enum": [
        "normal",
        "italic",
        "underline"
      ],
      "default": "normal"
    },
    "color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    }
  }
}
